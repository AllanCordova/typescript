{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES6",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],  // Inclui todos os arquivos TypeScript no diret√≥rio src
    "exclude": ["node_modules"]
  }
  